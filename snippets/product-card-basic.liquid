<div class="w-full py-6">
  <div class="overflow-hidden  group md:hover:shadow">
    <a href="{{ product.url }}">
      <div class="relative ">
        {% if product.featured_image %}
          <div class="overflow-hidden ">
            <img
              class="w-full z-40 h-full object-cover"
              src="{{ product.featured_image | img_url: 'large' }}"
              alt="{{ product.featured_image.alt }}">
          </div>
          {% if product.images.size > 1 %}
            <div class="transition duration-500 ease-in-out transform absolute top-0 w-full h-full opacity-0 md:group-hover:opacity-100 ">
              <img
                class="w-full h-full object-cover"
                src="{{ product.images.last |  img_url: 'large'}}"
                alt="{{ product.images.last.alt }}">
              <button class=" font-mono border border-transparent rounded-2xl uppercase text-sm bg-blue-950 group-hover:border group-hover:border-blue-950  hover:bg-yellow-400 text-white p-2 w-3/4 absolute bottom-2" style="  left: 50%;
                transform: translateX(-50%);  
              ">
                Quick Add - {{ product.price | money }}
              </button>
            </div>
          {% endif %}


        {% else %}
          {{ 'product-1' | placeholder_svg_tag: "w-full object-cover bg-gray-100" }}

        {% endif %}
      </div>

    </a>
    <div class="flex flex-col items-center justify-center">
      <a href="{{ product.url }}" class="text-center py-6 text-xl font-large block">{{ product.title }}</a>
      <button class="md:hidden font-mono border border-transparent rounded-2xl uppercase text-sm bg-blue-950 hover:border hover:border-blue-950  hover:bg-yellow-400 text-white p-2 w-3/4">
        Quick Add - {{ product.price | money }}
      </button>
    </div>

  </div>

</div>